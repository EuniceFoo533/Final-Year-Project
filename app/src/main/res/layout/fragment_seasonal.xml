<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SeasonalFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/grey_buildings" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:drawableStart="@drawable/wallet"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="20dp"
                android:text="My Wallet\n RM 0.00"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonReload"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="20dp"
                android:drawableStart="@drawable/add"
                android:text="Reload\nWallet"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvChooseVehicle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Choose Your Vehicle"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <Spinner
            android:id="@+id/spinnerCar"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:outlineProvider="@color/black"
            android:background="@drawable/borders"
            android:layout_gravity="center"
            android:spinnerMode="dialog"
            android:overlapAnchor="false"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:id="@+id/tvChoosePass"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Choose Your Pass"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHourly"
                android:background="@drawable/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Hourly"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAllCaps="false"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMontly"
                android:background="@drawable/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Seasonal"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvChooseDuration"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="Choose Monthly Pass"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>


        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="1 weeks \nRM 23.00" />

            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="1 month \nRM 90.00" />

            <RadioButton
                android:id="@+id/btn3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="2 month \nRM 180.00" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="3 month \nRM 225.00" />

            <RadioButton
                android:id="@+id/btn5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="4 month \nRM 360.00" />

            <RadioButton
                android:id="@+id/btn6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="5 month \nRM 450.00"/>


        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn7"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="6 month \nRM 540.00" />

        </RadioGroup>



        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPurchase"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:text="Confirm Purchase"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>