<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddLocationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/grey_buildings" />

            <TextView
                android:id="@+id/textViewCar"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="50dp"
                android:text="Enter the vehicle plate number:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>

            <Spinner
                android:id="@+id/spinnerCar"
                android:background="@drawable/borders"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:overlapAnchor="false"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="50dp"
                android:text="Current Latitude:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="50dp"
                android:text="Current Longitude:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"

                 />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSave"
                android:background="@drawable/button"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="SAVE PARK LOCATION" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>