<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddVehicleFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/grey_buildings" />

        <TextView
            android:id="@+id/tvPlateNumber"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            android:text="Enter the vehicle plate number:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtNumber"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="numberDecimal"
            android:hint="MAA 1234" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            android:text="Enter the vehicle type:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <Spinner
            android:id="@+id/edtType"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
             />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            android:text="Enter the vehicle name:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="numberDecimal"
            android:hint="eg. : Myvi" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:background="@drawable/button"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="RELOAD WALLET" />

    </LinearLayout>

</FrameLayout>